<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/md_white_1000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/md_white_1000"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:clickable="false"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:padding="10dp"
                    android:layout_below="@+id/header"
                    android:id="@+id/contentberita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/berita"/>


                <TextView
                    android:layout_margin="5dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Senin , 13 Maret 2017"
                    android:id="@+id/footer"
                    android:layout_below="@+id/contentberita"
                    />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran Mobil Semakin Mudah"
                    android:textSize="18sp"
                    android:textColor="@color/md_black_1000"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp" />

                <ImageButton
                    android:visibility="gone"
                    android:layout_below="@+id/footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/coba_expand"
                    android:src="@drawable/ic_launcher"
                    />

            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>